---
doublestar: true
include:
  - .yamlfmt
  - .yamllint
  - ".*.yaml"
  - "**/*.yaml.j2"
  - "**/*.yaml"
exclude:
  - ".direnv/**/*.yaml"
  - ".direnv/**/*.yaml.j2"
  - ".pre-commit-config.yaml"
formatter:
  type: basic
  disable_alias_key_correction: true
  drop_merge_tag: true
  eof_newline: true
  force_array_style: block
  include_document_start: true
  line_ending: lf
  max_line_length: 120
  retain_line_breaks_single: true
  scan_folded_as_literal: true
  trim_trailing_whitespace: true

# vim:ft=yaml

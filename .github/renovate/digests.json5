{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Do not try to configure digests in talconfig and plan files",
      "pinDigests": false,
      "matchFileNames": [
        "talos/**/talconfig.yaml",
        "kubernetes/apps/tools/system-upgrade-controller/templates/plans/*.yaml"
      ]
    }
  ]
}
